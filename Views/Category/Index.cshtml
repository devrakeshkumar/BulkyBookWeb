@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-primary">Category List</h4></div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle m-2"></i>Create New Category</a>
            
        </div>
    </div>


    <table class="table table-bordered table-striped" with="100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.DisplayOrder
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"> <i class="bi bi bi-pencil m-2"></i>Edit</a>
                        <a asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-trash-fill"></i>Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>